.contacts
  margin-top 100px
  color text-color
  .flex-container
  	flex-direction column
  	.contacts-card
  		border-bottom 1px solid #a5a5a5
  		font-size 15px
  		.caption
  			margin-top 20px
  			margin-bottom 35px
  		.adress
  			margin-bottom 25px
  		.phone
  			margin-bottom 13px
  		.fax
  			margin-bottom 25px
  		.mail
  			margin-bottom 35px
  		.description
  			font-size 18px
  		p:last-child
  			margin-bottom 20px
	  	&:last-child
	  		border-bottom none
	  		margin-bottom 40px
	  		border-bottom 2px solid #292929

.contacts-map
	margin-bottom 40px

	& .flex-container > ymaps
		width 100%!important

	& .flex-container > iframe
		width 100%!important

	& .flex-container
		margin-bottom 20px