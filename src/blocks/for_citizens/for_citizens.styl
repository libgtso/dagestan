.for-citizens
  // height 846px
  background-color #f4f7fb
  max-width none
  .section-caption
      height 126px
      line-height 126px
      display inline-block
      width 100%
      border-bottom 1px solid #dde1e6
    .citizens-flex-container
      margin-top 40px
      justify-content center
      @media (min-width 320px) and (max-width 640px)
        flex-direction column
    .citizens-card-container
      width 736px
      margin-right 65px
      display flex
      flex-direction column
      margin-bottom 80px
      @media (min-width 320px) and (max-width 640px)
        width 100%!important
      @media screen and (max-width 1200px)
        width 448px
        margin-right 40px
      .card-citizen
        position relative
        @media screen and (max-width 1200px)
          height 269px
        height 184px
        background-color #fff
        margin-bottom 16px
        overflow hidden
        border-radius 7px
        &:hover
          box-shadow 0px 0px 12px 0px #dadde2
        &:active
          box-shadow 0px 0px 12px 0px #000
        @media (min-width 320px) and (max-width 640px)
          padding-bottom 60px
        a
          display block
          height 99px // 184 - 40 - 45
          @media screen and (max-width 1200px)
            height 185px
          padding 40px 30px 45px
          .card-text-wrapper
            width 440px
            @media screen and (max-width 1200px)
              width 224px
            position relative
            height 100%
          .caption
            display inline-block
            color #3b4256
            font-size 20px
            font-weight 600
      
          .description
            position absolute
            bottom 0
            left 0
            display inline-block
            color #747e89
            font-size 16px
      
          .hexagon-img
            width 64px
            height 70px
            background-image url(../images/icons/hexagon-icon.png)
            position absolute
            right 32px
            bottom 55px
            @media screen and (max-width 1200px)
              top 30px
            @media (min-width 320px) and (max-width 640px)
              top 70%
              left 30px
    .citizens-menu
      width 352px
      height 360px
      @media screen and (max-width 1200px)
        height 359px
        width 448px
      background-color #0d49cc      
      border-radius 5px
      @media (min-width 320px) and (max-width 640px)
        width 100%
      .menu
        margin 40px 30px 35px 30px
        li
          margin-bottom 25px
          a
            position relative 
            display inline-block
            width 100%
            color #f
            font-size 16px
            font-weight 400
      
            &:hover
              color #f5f5f5
            &:after
              content ''
              position absolute
              right 0
              float right
              width 10px
              height 10px
              border-bottom 1px solid #fff
              border-right 1px solid #fff
              transform rotate(-45deg)
      .feedback
        display block
        width 290px
        height 64px
        background-color #ffffff
        margin 0 auto
        position relative
        border-radius 5px
        line-height 64px
        text-align center
        color #414757
        font-size 16px
        font-weight 600
        @media (min-width 320px) and (max-width 640px)
          width 240px