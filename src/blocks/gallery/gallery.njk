{% set header = 'Галерея' %}

{% set menu = [
	{
		'link': '/',
		'name': 'Все',
		'class': 'active'
	},
	{
		'link': '/',
		'name': 'Фотогалерия'
	},
	{
		'link': '/',
		'name': 'Видеогалерея'
	}
]%}

{% set preview = 'Превью наименования галереи расчитано на четыре строчки. Поместилось целиком.' %}

<section class="gallery">
    <div class="flex-container">
        <div class="gallery-menu">
            <h2 class="section-caption">{{header}}</h2>
            <div class="gallery-menu-tabs">
                <ul>
                	{% for item in menu %}
	                    <li>
	                        <a href="{{item.link}}" class="{% if item.class %}{{item.class}}{% endif %}">{{item.name}}</a>
	                    </li>
					{% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="flex-container all-gallery">
        <div class="video">
            <iframe width="100%" height="100%" src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                frameborder="0" allowfullscreen>
            </iframe>
        </div>
        <div class="photo">
            <div class="photo-preview">
                <img width="352" height="231" src="./images/img/gallery-item1.png" alt="">
            </div>
            <span class="photo-count">Фотографий:
                <span class="count">99</span>
            </span>
            <a href="#" class="main-photo-caption">{{preview}}</a>
        </div>
    </div>
</section>