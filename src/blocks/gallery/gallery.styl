.gallery
  margin-bottom 80px
  .gallery-menu
    width 100%
    border-bottom 1px solid #dde1e6
    display flex
    justify-content space-between
    @media (min-width 320px) and (max-width 640px)
      flex-direction column
    margin-top 64px
    .gallery-menu-tabs
      padding-bottom 6px
      ul
        li
          display inline-block
          &:first-child a
            margin-left 0
          a
            padding 20px 0
            margin-left 30px
            line-height 58px
            font-size 16px
            @media (min-width 320px) and (max-width 640px)
              margin-left 20px
      
            font-weight 600
            color #414757
            &:hover
              color #0e52e5
            &.active
              border-bottom 4px solid #1f50b9     
  .all-gallery
    flex-wrap wrap
    margin-top 40px
    @media (max-width 950px)
      justify-content center
    .video
      padding-bottom 20px
      max-width 736px
      width 100%
      height 415px
      margin-right: 32px
      iframe
        border-radius 4px
      @media screen and (max-width 1200px)
        max-width 448px
        width 100%
        height 256px
        margin-right 10px
    .photo
      width 345px
      height 415px
      @media screen and (max-width 1200px)
        width 448px
      @media (max-width 840px) and (min-width 320px)
        width 100%
        max-width 448px
      .photo-preview
        width 352px
        height 229px        
        border-radius 7px
        overflow hidden
        margin-bottom 25px
        @media screen and (max-width 1200px)
          width 448px
          height 256px
        @media screen and (min-width 320px)
          width 100%
        img
          width 100%
          height 100%
      .photo-count
        display inline-block
        font-size 16px
          
        color #747e89
        margin-bottom 32px
      .main-photo-caption
        display inline-block
        font-size 24px
  
        font-weight 600
        color #414757
        line-height 28px
        &:hover
          color #1f50b9