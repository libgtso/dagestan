.introduction
  // height 399px
  .flex-container
    display flex
    height 100%
    justify-content space-between
    flex-wrap nowrap
    padding 0 32px
    margin: 128px 0 73px 0
    @media screen and (max-width 600px)
      margin: 32px 0
      flex-direction: column
    @media screen and (max-width 500px)
      padding 0 16px
    .title
      flex 7
      margin auto 0
      font-size 48px
      font-weight bold
      @media (min-width 320px) and (max-width 640px)
        flex 6

      color text-color
      @media screen and (max-width 600px)
        font-size: 24px
        margin-bottom: 40px
    .republic
      display inline-block
      font-weight normal
      font-size 18px
      position relative
    .intro-menu
      flex 3
      margin auto 0
      font-size 18px
      font-weight 600

      li
        margin-bottom 20px
        position relative
        &:after
          content ''
          width 8px
          height 14px
          background-image url(../images/icons/arrow-icon.png)
          position absolute
          right 0
          bottom 0px
        &:hover
          color #0e52e5
          &:after
            background-image url(../images/icons/arrow-active-icon.png)
        a
          color #414757
          width 100%
          display inline-block
          &:hover
            color #0e52e5