.leadership
	.flex-container
		flex-direction column
	.section-caption
		margin 70px 0 50px 0
	.leadercard
		display flex
		margin-bottom 40px
		@media (min-width 320px) and (max-width 640px)
			flex-direction column
		&-img
			margin-right 20px
			width 250px
			height 255px
			border-radius 4px
			@media (min-width 320px) and (max-width 640px)
				margin-bottom 20px
		.caption
			&-link
				font-size 22px
				color text-color
				font-weight 600
				margin-bottom 10px
				display block
				&:hover
					text-decoration underline
					color color-hover-link
			&-text
				margin-bottom 10px
				color text-color

				.bold
					font-weight 800

			