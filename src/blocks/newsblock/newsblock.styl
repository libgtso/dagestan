.news
  margin-bottom 156px
  .news-menu
    margin-top 55px
    height 64px
    width 100%
    border-bottom 1px solid #dde1e6
    display flex
    justify-content space-between
    position: relative
    @media screen and (max-width 700px)
      height: 84px
      .news-menu-tabs
        position: absolute;      
        bottom: 0;
        width: 100%;
        overflow: hidden;
        overflow-x: scroll;
        &::-webkit-scrollbar
          width 0         
    .news-menu-tabs
      height 64px
      white-space: nowrap
      ul
        li
          display inline-block
          &:first-child a
            margin-left 0
          a
            padding 20px 0
            margin-left 30px
            line-height 64px
            font-size 16px
      
            font-weight 600
            color #414757
            &:hover
              color #0e52e5
            &.active
              border-bottom 4px solid #1f50b9
  .new-blocks
    display flex
    flex-wrap wrap
    margin-top 40px
    justify-content flex-start
    width 100%
    @media screen and (max-width 640px)
      flex-direction column
    align-items: center
    .news-item
      margin 13px
      height 415px 
      width 352px
      position relative
      min-width: 288px
      @media screen and (max-width 1200px)
        width 448px
      @media screen and (max-width 1010px)
        max-width: 46%
        margin 8px
      @media screen and (max-width 640px)
        max-width 90%
        margin 10px 0

      .caption
        height 100%
        display block
        font-size 24px
        color text-color
        font-weight 600
        line-height 32px
        &:hover
          color #0e52e5
        p
          position absolute
          bottom 35px
          @media (min-width 320px) and (max-width 692px)
            height 94px
            overflow hidden
      .time
        position absolute
        bottom 0
        left 0
        font-size 16px
        color #747e89
      img
        border-radius 4px
        max-width 450px
        max-height 230px
        width 100%
        height 100%
        margin-bottom 21px
    .main-news
      margin 10px
      @media screen and (max-width 1010px)
        margin 8px
      @media (min-width 320px) and (max-width 820px)
        display none
      .main-img
        width: 736px
        height 431px
        border-radius 4px
        @media screen and (max-width 1200px)
          width: 445px
          height 256px
        @media screen and (max-width 950px)
          max-width 400px
          max-height 230px
        @media screen and (max-width 992px) and (min-width 640px)
          .caption 
            display: none
            @media screen and (max-width 992px)
              display: block
    .main-news-description
      // height 256px
      width: 355px
      position relative
      .caption
        display block
        font-size 24px
        color text-color
        font-weight 600
        line-height 32px
        &:hover
          color #0e52e5
      @media screen and (max-width 1200px)
        width: 448px
        height 246px
      @media screen and (max-width 992px)

        display block
        font-size 32px
        color text-color
  
        font-weight 600
        margin-bottom 40px
        &:hover
          color #0e52e5
      @media (min-width 320px) and (max-width 820px)
        display none
      .description
        margin-top 40px
        display inline-block
        font-size 16px
        color #747e89
        line-height 25px
  
        font-weight normal
      .time
        position absolute
        bottom 0
        left 0
        font-size 16px
        color #747e89
  
    
  .more-news
    margin 62px 32px 0
    width 352px
    float right
    @media screen and (max-width 1200px)
      width: 448px
    @media screen and (max-width 992px)
      width: 288px
      margin 62px 16px 0 16px
    @media screen and (max-width 520px)
      float none
      width: 100%
    @media (min-width 320px) and (max-width 640px)
      margin 62px 0
    a
      position relative      
      font-size 18px
      color text-color
      font-weight 600

      display inline-block
      width 100%
      @media screen and (max-width 520px)
        position: relative;
        font-size: 18px;
        color: #3b4256;
        font-weight: 600;
        display: block;
        width: 288px;
        text-align: left;
        margin: 0 auto;
      &:after
        content ''
        position absolute
        right 0
        float right
        width 12px
        height 12px
        border-right 1px solid #404656
        border-bottom 1px solid #404656
        transform rotate(-45deg)
      &:hover
        color #0e52e5
        &:hover:after
          border-right 1px solid #0e52e5
          border-bottom 1px solid #0e52e5
  .show-more
    margin-right 50%
    width 150px

    a
      position relative
      &:after
        position absolute
        content ''
        width 9px
        height 9px
        border-bottom 2px solid #3f4656
        border-left 2px solid #3f4656
        top 4px
        transform rotate(-47deg)

.newspage .show-more-news
  margin 0 auto
  text-align center
  margin-top -100px
  margin-bottom 80px
  a
    position relative
    font-size 18px
    color #3b4256
    &:before
      position absolute
      content ''
      right -30px
      top 5px
      width 10px
      height 10px
      border-right 2px solid #3b4256
      border-top 2px solid #3b4256
      transform rotate(133deg)
.newspage .more-news
  display none