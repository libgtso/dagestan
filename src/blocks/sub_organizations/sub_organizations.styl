.sub-organizations
  max-width none
  background-color #f4f7fb
  .section-caption
    display inline-block
    padding 80px 0 46px
    width 100%
    border-bottom 1px solid #dde1e6
    @media (min-width 320px) and (max-width 640px)
      line-height 31px
      padding 62px 0 32px 
  .card-container
    .card
      background-color #fff
      margin-bottom 15px
      &:hover
        box-shadow 0px 0px 12px 0px #dadde2

        &:before
            border-bottom 1px solid #0e52e5
            border-left 1px solid #0e52e5

        & p 
          color #0e52e5
  .more
    justify-content flex-end
    height 93px
    .more-sub-org
      margin 32px 0 0 0
      width 352px
      float right
      @media (max-width 992px)
        float none
        margin 10px 0 -30px 40px
        width 250px
      a
        position relative
        font-size 18px
        color text-color
        font-weight 600
  
        display inline-block
        width 100%
        &:after
          content ''
          width 8px
          height 14px
          background-image url(../images/icons/arrow-icon.png)
          position absolute
          right 0
          bottom 0
        &:hover
          color #0e52e5
          &:after
            background-image url(../images/icons/arrow-active-icon.png)